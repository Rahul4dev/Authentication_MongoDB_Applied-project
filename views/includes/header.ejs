<header id="main-header">
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <!-- only home signIn and SignUp should be shown to visitors -->
      <% if (!locals.isAuth) { %>
      <li><a href="/signup">Signup</a></li>
      <li><a href="/login">Login</a></li>
      <% } %>
      <!-- home, Admin, Profile and Logout should be shown to Admin User -->
      <% if (locals.isAdmin) { %>
      <li><a href="/admin">Admin</a></li>
      <% } %>
      <!-- home, profile and logout tab shown to general users -->
      <% if (locals.isAuth) { %>
      <li><a href="/profile">Profile</a></li>

      <li>
        <form action="/logout" method="POST">
          <button>Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
